processes:
  - name: defectdojo
    executable: /var/vcap/jobs/defectdojo/bin/defectdojo.sh
    persistent_disk: true
    ephemeral_disk: true
    additional_volumes:
    - path: /var/vcap/sys/tmp/defectdojo
      writable: true
      allow_executions: true
    - path: /var/vcap/jobs/defectdojo/config
      writable: true
    capabilities:
    - SYS_RESOURCE
