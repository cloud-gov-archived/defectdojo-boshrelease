#!/bin/bash

cd /var/vcap/jobs/defectdojo/packages/defectdojo

export LD_LIBRARY_PATH=/var/vcap/packages/python/lib:$LD_LIBRARY_PATH
export C_INCLUDE_PATH=/var/vcap/packages/python/include:$C_INCLUDE_PATH
export PATH=/var/vcap/packages/python/bin:$PATH

. venv/bin/activate

export DD_DATABASE_URL=postgresql://defectdojo:defectdojo@postgres:5432/defectdojo
export DD_DATABASE_ENGINE=django.db.backends.postgresql
export DD_DATABASE_PORT=5432
export DD_DATABASE_NAME=defectdojo
export DD_TEST_DATABASE_NAME=test_defectdojo
export DD_TEST_DATABASE_URL=postgresql://defectdojo:defectdojo@postgres:5432/test_defectdojo

python3 manage.py runserver 0.0.0.0:8080
