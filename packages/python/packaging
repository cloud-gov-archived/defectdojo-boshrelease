#!/bin/bash
set -eo pipefail

apt-get -y update
apt-get -y install --no-install-recommends \
  gcc \
  build-essential \
  dnsutils \
  default-mysql-client \
  libmariadb-dev-compat \
  libpq-dev \
  postgresql-client \
  xmlsec1 \
  git \
  uuid-runtime \
  # libcurl4-openssl-dev is required for installing pycurl python package
  libcurl4-openssl-dev \
  python3.11

apt-get clean
rm -rf /var/lib/apt/lists # save 100+ MB

# ln -s $(which python3) /usr/bin/python
# don't need this^, but need to make sure we're using 3.11 instead of 3.10.

# apt-get install
