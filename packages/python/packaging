set -e # exit immediately if a simple command exits with a non-zero status
set -u # report the usage of uninitialized variables

# Detect # of CPUs so make jobs can be parallelized
CPUS=$(grep -c ^processor /proc/cpuinfo)

export HOME=/var/vcap

echo "Extracting libffi-3.4.4.tar.gz ..."
if ! tar xpvf libffi-3.4.4.tar.gz ; then
  echo "Failed extracting libffi-3.4.4.tar.gz ..."
  exit 1
fi

echo "Installing libffi..."
pushd libffi-3.4.4
  ./configure --prefix="${BOSH_INSTALL_TARGET}"/libffi
  make
  make install
popd

export LDFLAGS=-L${BOSH_INSTALL_TARGET}/libffi/lib
export CPPFLAGS="-I${BOSH_INSTALL_TARGET}/libffi/include"
export PKG_CONFIG_PATH=${BOSH_INSTALL_TARGET}/libffi/lib/pkgconfig

tar xf python/Python-*.tar.xz
pushd Python*
  ./configure --prefix=$BOSH_INSTALL_TARGET --with-system-ffi --with-ensurepip
  make -j $CPUS
  make install
popd

pip3 install --upgrade python/wheel-*-py3-none-any.whl
pip3 install --upgrade python/pip-*-py3-none-any.whl
pip3 install --upgrade python/setuptools-*-py3-none-any.whl
pip3 install --upgrade python/virtualenv-*-py3-none-any.whl
