set -e # exit immediately if a simple command exits with a non-zero status
set -u # report the usage of uninitialized variables

# Detect # of CPUs so make jobs can be parallelized
CPUS=$(grep -c ^processor /proc/cpuinfo)

export HOME=/var/vcap

apt-get -y update
apt-get -y install --no-install-recommends \
  libffi-dev \
  libpython3.11-dev \

tar xf python/Python-*.tar.xz
pushd Python*
  ./configure \
    --prefix=${BOSH_INSTALL_TARGET} \
    --with-ensurepip \
    --enable-shared \
    --enable-unicode=ucs4

  make -j $CPUS
  make install
popd

for dir in $(ls -d /var/vcap/packages/*/bin); do export PATH=$dir:$PATH; done
for dir in $(ls -d /var/vcap/packages/*/lib); do export LD_LIBRARY_PATH=$dir:${LD_LIBRARY_PATH:-}; done

pip3 install --upgrade python/wheel-*-py3-none-any.whl
pip3 install --upgrade python/pip-*-py3-none-any.whl
pip3 install --upgrade python/setuptools-*-py3-none-any.whl
pip3 install --upgrade python/virtualenv-*-py3-none-any.whl
