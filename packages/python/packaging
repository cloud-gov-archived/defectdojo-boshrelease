set -e # exit immediately if a simple command exits with a non-zero status
set -u # report the usage of uninitialized variables

# Detect # of CPUs so make jobs can be parallelized
CPUS=$(grep -c ^processor /proc/cpuinfo)

export HOME=/var/vcap

tar xf python/Python-*.tar.xz
pushd Python*
  ./configure \
    --prefix=${BOSH_INSTALL_TARGET} \
    --with-ensurepip \
    --enable-shared \
    --enable-unicode=ucs4

  make -j $CPUS
  make install
popd

pip install --upgrade python/wheel-*-py3-none-any.whl
pip install --upgrade python/pip-*-py3-none-any.whl
pip install --upgrade python/setuptools-*-py3-none-any.whl
pip install --upgrade python/virtualenv-*-py3-none-any.whl
