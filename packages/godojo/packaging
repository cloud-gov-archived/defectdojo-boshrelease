#!/bin/bash
set -e # exit immediately if a simple command exits with a non-zero status
set -u # report the usage of uninitialized variables

apt-get -y update
apt-get -y install --no-install-recommends \
  unzip \

unzip godojo/godojo-v1.2.1_standard.zip

cp standard/godojo ${BOSH_INSTALL_TARGET}/godojo

mkdir /var/vcap/jobs/godojo/bin
cp godojo/dojoConfig.yml /var/vcap/jobs/godojo/bin/dojoConfig.yml

cd /var/vcap/jobs/godojo/bin
/var/vcap/jobs/godojo/packages/godojo/godojo
