#!/bin/bash
set -e # exit immediately if a simple command exits with a non-zero status
set -u # report the usage of uninitialized variables

apt-get -y update
apt-get -y install --no-install-recommends \
  unzip \

unzip godojo/godojo-v1.2.1_standard.zip

pushd standard

cp godojo ${BOSH_INSTALL_TARGET}/godojo

popd

cp godojo/dojoConfig.yml $(BOSH_INSTALL_TARGET)/dojoConfig.yml

cd ${BOSH_INSTALL_TARGET}

./godjo
